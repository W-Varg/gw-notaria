{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist",
        "watchAssets": false
      },
      {
        "include": "resources/**/*",
        "outDir": "dist",
        "watchAssets": false
      }
    ],
    "webpack": false
  },
  "generateOptions": {
    "spec": false
  }
}
