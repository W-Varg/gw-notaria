# ==============================================
# SERVER CONFIGURATION
# ==============================================
ENV_PORT=3060
ENV_BASE_URL=http://localhost:3060
ENV_FRONT_APP_URL=http://localhost:5173
ENV_FILE_MAX_SIZE=100mb
ENV_DEBUG_SERVER=false
ENV_SWAGGER_SHOW=true
ENV_ENTORNO=dev

# ==============================================
# CORS CONFIGURATION
# ==============================================
ENV_CORS=*

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Prisma Database URL
# Format: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgres://postgres:password@localhost:5432/db_notaria"

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this
JWT_EXPIRES_IN=1h

# ==============================================
# GOOGLE OAUTH CONFIGURATION
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3060/auth/google/callback

# ==============================================
# USER REGISTRATION CONFIGURATION
# ==============================================
ENV_DEFAUL_ROL_REGISTER=CLIENTE

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# Email Service (gmail, outlook, etc)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourapp.com

# ==============================================
# AWS S3 CONFIGURATION (Optional)
# ==============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET_NAME=your-bucket-name

# ==============================================
# NOTIFICATIONS CONFIGURATION (Optional)
# ==============================================
ENV_WEBHOOK_URL=https://your-webhook-url.com
