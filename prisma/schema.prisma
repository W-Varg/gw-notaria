  @@schema("logs")
}

model ErrorLog {
  id              String    @id @default(cuid())
  // Información del error
  mensaje         String
  tipo            String // Tipo de error (TypeError, ValidationError, etc.)
  codigo          String? // Código de error personalizado
  severidad       String // LOW, MEDIUM, HIGH, CRITICAL
