  contexto        String? // Clase/método donde ocurrió
  modulo          String? // Módulo afectado
  // Request info
  metodoHttp      String?
  url             String?
  requestBody     Json?
  // Usuario afectado
  usuarioId       String?
  usuarioEmail    String?
  ip              String?
  // Estado
