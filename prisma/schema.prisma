model Servicio {
  id                 String   @id @default(cuid())
  codigoTicket       String   @unique @db.VarChar(20)
  clienteId          String
  tipoDocumentoId    String
  tipoTramiteId      String
  fechaInicio        DateTime @default(now()) @db.Timestamptz()
