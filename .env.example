# ==================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/nombre_db?schema=public"

# ==================================
# CONFIGURACIÓN DE JWT
# ==================================
JWT_SECRET="tu_secreto_jwt_muy_seguro_de_al_menos_32_caracteres"
JWT_EXPIRATION_TIME=3600
JWT_REFRESH_SECRET="tu_secreto_refresh_muy_seguro_de_al_menos_32_caracteres"
JWT_REFRESH_EXPIRATION_TIME=86400

# ==================================
# CONFIGURACIÓN DE CORS
# ==================================
FRONTEND_URL="http://localhost:5173"

# ==================================
# CONFIGURACIÓN DE EMAIL (Opcional)
# ==================================
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="tu-email@gmail.com"
EMAIL_PASSWORD="tu-app-password"
EMAIL_FROM="noreply@tuapp.com"

# ==================================
# OAUTH GOOGLE (Opcional)
# ==================================
GOOGLE_CLIENT_ID="tu-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="tu-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/auth/google/callback"

# ==================================
# CONFIGURACIÓN DEL SERVIDOR
# ==================================
NODE_ENV="development"
PORT=3000

# ==================================
# NOTAS:
# ==================================
# 1. Copia este archivo a .env y completa con tus valores reales
# 2. Nunca subas el archivo .env a Git
# 3. Para producción en Vercel, configura estas variables en el dashboard
# 4. Para generar secretos seguros usa: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
